@model Utilisateur
@{
    <div class="inscription">
        <form class="form-insc" asp-controller="Utilisateurs" asp-action="EssaiInscription" method="post">
            <label asp-for="@Model.nom"> nom : </label>
            <input asp-for="@Model.nom">
            <label asp-for="@Model.pseudo">pseudo : </label>
            <input asp-for="@Model.pseudo">
            <label for="pp"><img src="/img/site/upload.png" alt="">  photo de profil : </label>
            <input type="file" name="pp" id="pp" accept="image/png, image/jpeg">
            <img src="/img/site/image-profil-base.png" id="img-profil" alt="">
            <label asp-for="@Model.Telephone">Telephone : </label>
            <input asp-for="@Model.Telephone">
            <label asp-for="@Model.email">Email : </label>
            <input asp-for="@Model.email">
            <label asp-for="@Model.motdePasse">mot de passe : </label>
            <div id="div-eye">
                <input asp-for="@Model.motdePasse">
                <img src="../img/site/oeil.png" alt="" id="eye">
            </div>

            <input type="submit">
        </form>
        <button><a asp-controller="Connection" asp-action="index">retour</a></button>
    </div>


    



}
