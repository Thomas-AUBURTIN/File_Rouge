@using WebApplication1.ViewModels
@model EditeurJeuViewModel
<h1>@Model.titre</h1>
@if (ViewData.ContainsKey("ValidateMessage"))
{
	<p>@ViewData["ValidateMessage"]</p>
}
<form asp-controller="Gestion" asp-action="@Model.action" asp-route-id="@Model.Jeu.jeuid" method="post" enctype="multipart/form-data">
	<table>
		<tr>
			<td><label asp-for="@Model.Jeu.titre"></label></td>
			<td><input asp-for="@Model.Jeu.titre"></td>
			<td><span asp-validation-for="@Model.Jeu.titre" class="text-danger"></span></td>
		</tr>
		<tr>
			<td><label asp-for="@Model.Jeu.description"></label></td>
			<td><input asp-for="@Model.Jeu.description"></td>
			<td><span asp-validation-for="@Model.Jeu.description" class="text-danger"></span></td>
		</tr>
		<label for="pp"><img src="/img/jeu/@Model.Jeu.image" alt="">  photo de profil : </label>
		<input type="file" name="pp" id="pp" accept="image/png, image/jpeg">
		<img src="/img/site/@Model.Jeu.image" id="img-profil" alt="">


		<label asp-for="@Model.Jeu.idTypes"></label>
		<select asp-for="@Model.Jeu.idTypes" asp-items="Model.ListTypes" multiple="multiple"></select>


		<label asp-for="@Model.Jeu.idThemes"></label>
		<select asp-for="@Model.Jeu.idThemes" asp-items="Model.ListThemes" multiple="multiple"></select>

		<label asp-for="@Model.Jeu.nombrejoueursrecommandes"></label>
		<select asp-for="@Model.Jeu.nombrejoueursrecommandes" asp-items="@Model.ListJoueur"></select>


		<label asp-for="@Model.Jeu.tempsjeumoyen"></label>
		<select asp-for="@Model.Jeu.tempsjeumoyen" asp-items="@Model.ListTemps"></select>
	
		<button type="submit">Valider</button>
	</table>



	<input type="hidden" name="Jeu.image" value="@Model.Jeu.image">
	<input type="hidden" asp-for="@Model.Jeu.jeuid">
	<input type="submit" value="Envoyer">
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}