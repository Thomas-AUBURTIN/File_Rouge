@{

}
@{
	Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<div class="detail">
	<h1>@Model.titre</h1>
	<img src="~/img/jeu/@Model.image" />
	<p class="description">@Model.description</p>
	<p>nombre de joueur conseiller : @Model.nombrejoueursrecommandes</p>
	<p>temps de jeu moyen : @Model.tempsjeumoyen</p>
	<ul>Theme :
	@foreach (Theme theme in @Model.themes)
	{
		<li>@theme.nom</li>

	}
	
	</ul>
	<ul>
		Type :
		@foreach (WebApplication1.Models.JeuxType type in Model.types)
		{
			<li>@type.nom</li>

		}
		
	</ul>
	<ul>
		Type :
		@foreach (Commentaire commentaire in @Model.commentaires)
		{
			<li>
				<p>@commentaire.commentaire</p>
				<p>@commentaire.utilisateurId - @commentaire.datecommentaires</p>
				</li>

		}
		
	</ul>
	<form asp-controller="Catalogue" asp-action=supprimer asp-route-id="@Model.jeuid" method="post">
		input type="submit" value="Supprimer">
		<input type="hidden" asp-for="@Model.jeuid" name="idJeu">


	</form>
</div>
